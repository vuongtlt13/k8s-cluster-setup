#!/bin/bash
set -e

# =========================
# Cluster configuration
# =========================
MASTER_IP="192.168.122.10"
WORKERS=("192.168.122.11" "192.168.122.12")
USER="ubuntu"
K8S_VERSION="1.28.0-00"
SSH_OPTS="-o StrictHostKeyChecking=no -o UserKnownHostsFile=/dev/null"
POD_CIDR="10.244.0.0/16"  # Flannel

# =========================
# Function: install Docker + Kubernetes
# =========================
install_node() {
    local IP=$1
    echo ">>> Installing Docker + Kubernetes on $IP"

    ssh $SSH_OPTS $USER@$IP bash <<EOF
sudo apt update
sudo apt install -y apt-transport-https ca-certificates curl gnupg lsb-release

# Docker
sudo mkdir -p /etc/apt/keyrings
curl -fsSL https://download.docker.com/linux/ubuntu/gpg | sudo gpg --dearmor -o /etc/apt/keyrings/docker.gpg
echo "deb [arch=\$(dpkg --print-architecture) signed-by=/etc/apt/keyrings/docker.gpg] https://download.docker.com/linux/ubuntu \$(lsb_release -cs) stable" | sudo tee /etc/apt/sources.list.d/docker.list
sudo apt update
sudo apt install -y docker-ce docker-ce-cli containerd.io docker-compose-plugin
sudo systemctl enable docker
sudo systemctl start docker

# Disable swap
sudo swapoff -a
sudo sed -i '/ swap / s/^/#/' /etc/fstab

# Kubernetes Setup
# Add K8s GPG key and repository
curl -fsSL https://pkgs.k8s.io/core:/stable:/v1.34/deb/Release.key | sudo gpg --dearmor -o /etc/apt/keyrings/kubernetes-apt-keyring.gpg
echo 'deb [signed-by=/etc/apt/keyrings/kubernetes-apt-keyring.gpg] https://pkgs.k8s.io/core:/stable:/v1.34/deb/ /' | sudo tee /etc/apt/sources.list.d/kubernetes.list
sudo apt update
sudo apt install -y kubelet=$K8S_VERSION kubeadm=$K8S_VERSION kubectl=$K8S_VERSION
sudo apt-mark hold kubelet kubeadm kubectl

# CONFIGURE CONTAINERD (Fix for 'unknown service runtime.v1.RuntimeService' error)
# 1. Create default containerd config file
sudo containerd config default | sudo tee /etc/containerd/config.toml

# 2. Change cgroup driver from cgroupfs to systemd (required by kubelet)
sudo sed -i 's/SystemdCgroup = false/SystemdCgroup = true/g' /etc/containerd/config.toml

# 3. Restart containerd service to apply new configuration
sudo systemctl restart containerd

# Enable net.bridge settings (required for CNI)
sudo modprobe br_netfilter
echo '1' | sudo tee /proc/sys/net/bridge/bridge-nf-call-iptables
EOF
}

# =========================
# Install on all nodes
# =========================
install_node $MASTER_IP
for IP in "${WORKERS[@]}"; do
    install_node $IP
done

echo ">>> Docker + Kubernetes packages installed on all nodes!"

# =========================
# Initialize master
# =========================
echo ">>> Initializing master node"
ssh $SSH_OPTS $USER@$MASTER_IP bash <<EOF
sudo kubeadm init --apiserver-advertise-address=$MASTER_IP --pod-network-cidr=$POD_CIDR
mkdir -p \$HOME/.kube
sudo cp -i /etc/kubernetes/admin.conf \$HOME/.kube/config
sudo chown \$(id -u):\$(id -g) \$HOME/.kube/config
EOF

# =========================
# Deploy Flannel network
# =========================
ssh $SSH_OPTS $USER@$MASTER_IP bash <<'EOF'
kubectl apply -f https://raw.githubusercontent.com/flannel-io/flannel/master/Documentation/kube-flannel.yml
EOF

# =========================
# Join workers
# =========================
JOIN_CMD=$(ssh $SSH_OPTS $USER@$MASTER_IP "kubeadm token create --print-join-command")
for IP in "${WORKERS[@]}"; do
    echo ">>> Joining worker $IP"
    ssh $SSH_OPTS $USER@$IP "sudo $JOIN_CMD"
done

echo ">>> Kubernetes cluster setup complete!"
